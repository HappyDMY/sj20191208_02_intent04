<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/dialBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화걸기 직전 (010-1234-6789)"
        />

    <Button
        android:id="@+id/callBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="실제 전화걸기"
        />
    <EditText
        android:id="@+id/smsNumEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="문자를 입력받을 사람 번호"
        android:inputType="phone"
        />

    <Button
        android:id="@+id/smsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문자 전송 화면 (입력한 번호로)"
        />

    <Button
        android:id="@+id/naverBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naver 화면으로 보내기"
        />
    <Button
        android:id="@+id/kakaoAppBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카카오톡 다운로드"
        />
    <Button
        android:id="@+id/googleMapBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더조은 학원"
        />

</LinearLayout>